<div id="home">
    <div class="container">
        <div class="row" id="login-card">
            <div class="col-8">
                <div class="card" id="welcome-card">
                    <img src="https://i.ibb.co/zXZCQFJ/welcome-image.png" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><u>Login to TriviaBoards</u></h5>
                        <form>
                            <div class="form-group">
                                <label for="username">Email</label>
                                <input type="email" class="form-control" id="user-input" placeholder="Enter your email">
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" class="form-control" id="password-input"
                                    placeholder="Enter your password">
                            </div>
                            <button type="submit" class="btn btn-primary" id="user-submit">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" id="gif-row">
            <div class="col-sm-8" id="gif-col">
                <img id="preview-gif" src="https://media.giphy.com/media/xT5LMx8L9rZtLGgCL6/giphy.gif">
            </div>
            <br>
            <button type="submit" class="btn btn-info" id="login-btn">Login</button>
            <br>
            <a href="/signup">
                <button class="btn btn-success" id="account-btn">Create an account</button>
            </a>
        </div>
        <div class="row" id="signup-form">
            <div class="col-sm-10" id="signup-col">
                <form>
                    <h1>Sign up for TriviaBoards!</h1>
                    <div class="form-group">
                        <label for="nickname">What is your nickname?</label>
                        <input type="nickname" class="form-control" id="nickname-signup" aria-describedby="emailHelp"
                            placeholder="Enter nickname">
                    </div>
                    <div class="form-group">
                        <label for="avatar">Provide a link for your profile picture</label>
                        <input type="avatar" class="form-control" id="pic-signup" aria-describedby="emailHelp"
                            placeholder="Enter link">
                    </div>
                    <div class="form-group">
                        <label for="email">What is your email address?</label>
                        <input type="email" class="form-control" id="email-input" aria-describedby="emailHelp"
                            placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label for="password">Create a password</label>
                        <input type="password" class="form-control" id="password-input" placeholder="Enter password">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="public/js/index.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>
    $('#user-submit').on('submit', function () {
        event.preventDefault();
        let userInfo = {
            email: $('#email-input').val().trim(),
            password: $('#password-input').val().trim()
        }
    });
    $('#login-btn').on('click', function () {
        $('#gif-row').css('display', 'none');
        $('#login-card').css('display', 'flex');
    });

</script>